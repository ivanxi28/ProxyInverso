# Usar la imagen oficial de PHP con Apache
FROM php:8.2-apache

# Instalar extensiones necesarias
RUN apt-get update && apt-get install -y \
    git \
    unzip \
    libicu-dev \
    libzip-dev \
    libonig-dev \
    && docker-php-ext-install pdo pdo_mysql intl zip

# Instalar Composer
COPY --from=composer:2 /usr/bin/composer /usr/bin/composer

# Configurar directorio de trabajo
WORKDIR /app

# Copiar solo archivos necesarios para optimizar cach√©
COPY composer.json composer.lock ./

# Instalar dependencias con Composer
RUN COMPOSER_MEMORY_LIMIT=-1 composer install --no-interaction --no-progress --prefer-dist

# Copiar el resto de los archivos del proyecto
COPY . .

# Ajustar permisos para la carpeta var/
RUN chmod -R 777 /app/var

# Ejecutar migraciones si existen
RUN if [ -d "migrations" ]; then php bin/console doctrine:migrations:migrate --no-interaction; fi

# Exponer el puerto (Apache usa el 80 por defecto)
EXPOSE 80

# Usar Apache como servidor
CMD ["apache2-foreground"]
